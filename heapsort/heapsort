#include <stdlib.h>
#include <stdio.h>

void reconstroiheap(int *v, int pos, int tam)
{
    int pf1, pf2, PTroca, temp, i, trocou;
    trocou = 1;
    while (trocou)
    {
        pf1 = pos * 2;
        if (pf1 > tam)
        {
            trocou = 0;
        }
        else
        {
            pf2 = pos * 2 + 1;
            if (pf2 <= tam - 1)
            {
                if (v[pf1] > v[pf2])
                {
                    PTroca = pf1;
                }
                else
                {
                    PTroca = pf2;
                }
                if (v[pos] < v[PTroca])
                {
                    temp = v[pos];
                    v[pos] = v[PTroca];
                    v[PTroca] = temp;
                    pos = PTroca;
                }
                else
                {
                    trocou = 0;
                }
            }
        }
    }
}


