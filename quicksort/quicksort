#include <stdio.h>
#include <stdlib.h>

#define tamvet 8

void particao(int *v, int left, int right, int *i, int *j)
{
    int pivo, temp;
    pivo = v[(left + right) / 2];
    *i = left;
    *j = right;
    do
    {
        while (v[*i] < pivo)
        (*i)++;
        while (v[*j] > pivo)
            (*j)--;
        if (*i < *j)
        {
            temp = v[*i];
            v[*i] = v[*j];
            v[*j] = temp;
            *i++;
            *j--;
        }

    }while (*i <= *j)
}

void quicksort(int *v, int l, int r)
{
    int i, j;
    partiscao(v, l, r, &i, &j);
    if (j > l)
    {
        quicksort(v, l, j);
    }
    if (i < r)
    {
        quicksort(v, i, r);
    }
}

void main()
{
    int lacunas[] = {701, 301, 132, 57, 23, 10, 4, 1};
    quicksort(&lacunas, 1, tamvet-1);

    for (int i = 0; i < 8; i++)
    {
        printf("%d", &lacunas[i]);
    }
}
